#!/bin/bash

rm -rf ~/.vim
rm -rf ~/.vimrc
rm -rf ~/.bash_aliases
rm -rf ~/.bash_profile
rm -rf ~/.bashrc
rm -rf ~/.dir_colors
rm -rf ~/.tmux.conf
rm -rf ~/.zshrc
ln -sf $PWD/vim ~/.vim
ln -sf $PWD/vimrc ~/.vimrc
ln -sf $PWD/bash_aliases ~/.bash_aliases
ln -sf $PWD/bash_profile ~/.bash_profile
ln -sf $PWD/bashrc ~/.bashrc
ln -sf $PWD/dir_colors ~/.dir_colors
ln -sf $PWD/tmux.conf ~/.tmux.conf
ln -sf $PWD/zshrc ~/.zshrc
